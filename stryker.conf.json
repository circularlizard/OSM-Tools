{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "command",
  "concurrency": 8,
  "timeoutMS": 30000,
  "timeoutFactor": 3,
  "reporters": ["html", "clear-text", "progress"],
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/lib/api.ts",
    "src/lib/bottleneck.ts",
    "src/lib/app-route-guards.ts",
    "src/lib/config-loader.ts",
    "src/lib/member-data-parser.ts",
    "src/lib/member-issues.ts",
    "src/store/use-store.ts"
  ],
  "ignorePatterns": [
    "tests/e2e/**",
    "playwright-report/**",
    "test-results/**",
    ".next/**",
    "coverage/**"
  ],
  "commandRunner": {
    "command": "npx jest --config jest.config.ts --maxWorkers=4 src/lib src/store"
  },
  "tempDirName": ".stryker-tmp",
  "htmlReporter": {
    "fileName": "reports/mutation/index.html"
  }
}
